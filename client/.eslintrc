---
parser: babel-eslint
plugins:
  - react
globals:
  __DEBUG_SERVER_ERRORS__: true
  __SERVER_ERRORS__: true
  jasmine: true
  expect: true
  spyOn: true
  Factory: true
  sinon: true
  URLSearchParams: true
env:
  browser: true
  node: true
  es6: true
  jasmine: true
rules:
  ### Variables
  no-undef: 2
  no-unused-vars: [2, { vars: all, args: none }]
  ### Stylistic issues
  indent: [1, 2, { SwitchCase: 1, VariableDeclarator: 2 }]
  id-length: [1, { min: 2, exceptions: [_, e, i, k, v, $] }]
  max-len: [error, 120]
  ### React
  jsx-quotes: [1, prefer-single]
  quotes: [1, 'single']
  react/display-name: 0
  react/jsx-boolean-value: [1, always]
  react/jsx-curly-spacing: [1, never]
  react/jsx-no-duplicate-props: [2, { ignoreCase: true }]
  react/jsx-no-undef: 2
  react/jsx-sort-prop-types: [2, { "requiredFirst": true, "callbacksLast": true }]
  react/jsx-sort-props: [2, { ignoreCase: true }]
  react/jsx-uses-react: 2
  react/jsx-uses-vars: 2
  react/no-danger: 0
  react/no-did-mount-set-state: 1
  react/no-did-update-set-state: 0
  react/no-multi-comp: 2
  react/no-unknown-property: 2
  react/prop-types: 1
  react/react-in-jsx-scope: 2
  react/require-extension: [1, { extensions: [.js, .jsx] }]
  react/self-closing-comp: 2
  react/sort-comp: [1, { order: ['static-methods', 'lifecycle', 'everything-else', 'render'] }]
  react/wrap-multilines: 2
  no-alert: 0
  comma-dangle: 2
  array-bracket-spacing: 0
  object-curly-spacing: 0
  one-var: 0
  camelcase: 0
  func-names: 0
  no-unused-expressions: [2, { "allowShortCircuit": true, "allowTernary": true }]
  new-cap: [2, { capIsNewExceptions: ["Deferred"] }]
